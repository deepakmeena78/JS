<html>

<head>
    <%-include("__bootstrap.ejs")%>
</head>

<body class="text-black">
    <%- include("__header.ejs")%>
        <div class="container mt-4">
            <form action="/task/create-task" method="post">
                <div class="form-group">
                    <input name="title" type="text" placeholder="Enter task title" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Write task description"></textarea>
                </div>
                <div class="form-group">
                    <select class="form-control" name="priorityId">
                        <option disabled selected>Select task priority</option>
                        <option value="high">High</option>
                        <option value="mid">Medium</option>
                        <option value="low">Low</option>
                    </select>
                </div>
                <div class="form-group">
                    <button style="background-color: chartreuse;" type="submit"> <a href="/task/conplete-task">Create</a></button>
                </div>
            </form>
        </div>
</body>

</html>